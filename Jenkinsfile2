pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
                echo " I'm in Build Stage" 
            }
        }
        stage('Test') { 
            steps {
                echo " I'm in Test Stage" 
            }
        }
        stage('Deploy') { 
            steps {
                echo " I'm in Deploy Stage" 
            }
        }
    }
}
